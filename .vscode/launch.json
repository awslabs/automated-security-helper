{
  "configurations": [
    {
      "console": "integratedTerminal",
      "name": "Python Debugger: Current File",
      "program": "${file}",
      "request": "launch",
      "type": "debugpy"
    },
    {
      "args": [
        "scan",
        "--verbose",
        "--no-progress",
        "--",
        "--scanners=\"npm-audit\"",
        "--exclude-scanners=\"cdk-nag\""
      ],
      "console": "integratedTerminal",
      "env": {
        "PATH": "${workspaceFolder}/.venv/bin:${env.PATH}"
      },
      "name": "ASH: Test CLI",
      "program": "${workspaceFolder}/.venv/bin/ash",
      "request": "launch",
      "type": "debugpy"
    },
    {
      "args": [],
      "console": "integratedTerminal",
      "name": "ASH: Test CDK Nag Headless Wrapper",
      "program": "./automated_security_helper/utils/cdk_nag_wrapper.py",
      "request": "launch",
      "type": "debugpy"
    },
    {
      "console": "integratedTerminal",
      "env": {
        "_PYTEST_RAISE": "1"
      },
      "justMyCode": true,
      "name": "Debug Tests",
      "request": "launch",
      "type": "debugpy"
    }
  ],
  "version": "0.2.0"
}
